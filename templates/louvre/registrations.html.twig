<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
<link rel="stylesheet" href="https://bootswatch.com/4/lux/bootstrap.min.css">
<div class="container">
    <div class="row">
        <div class="col-12 text-center">
            <img src="{{ asset('http://projet4.ludoviczibelli.fr/logo_3.png') }}" width="190" height="50" alt="Logo louvre">
        </div>
    </div>
    <div class="row">
        <div class="col-12 text-center">
            <h3>{{ 'titre_regi_1'|trans }}</h3>
            <p>{{ 'texte_regi_1'|trans }} <strong>n° {{ number }}</strong>.</p>
            <p>{{ 'texte_regi_2'|trans }} <strong>{{ date }}</strong> {{ 'texte_regi_3'|trans }}.</p>
            <p>{{ 'texte_regi_4'|trans }} <strong>{{ price }}€</strong>.</p>

            <p>{{ 'texte_regi_5'|trans }} : </p>
            <table>
                {% for ticket in tickets %}
                    <tr>
                        <td>{{ 'texte_regi_6'|trans }}</td>
                        <td>{{ ticket.name }}</td>
                        <td>{{ticket.firstname }}</td>
                    </tr>
                {% endfor %}
            </table>
            <h3>{{ 'texte_regi_7'|trans }}</h3>
            <p>{{ 'texte_regi_8'|trans }}</p>
        </div>
    </div>
</div>

